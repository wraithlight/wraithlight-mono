{
    "$schema": "https://unpkg.com/knip@2/schema.json",
    "ignore": [
        "**/dist/**",
        "**/coverage/**",
        "vsc/**",
        ".scripts/**",
        "**/vite-env.d.ts"
    ],
    "workspaces": {
        ".": {
            "ignore": [
                "webpack.config.js",
                ".eslintrc.cjs",
                "jest.config.js"
            ],
            "ignoreDependencies": [
                "depcheck"
            ]
        },
        "apps/auth/node": {
            "ignoreDependencies": [
                "ts-node"
            ]
        },
        "apps/content/node": {
            "ignoreDependencies": [
                "ts-node"
            ]
        },
        "apps/editor/node": {
            "ignoreDependencies": [
                "ts-node"
            ]
        },
        "apps/logs/node": {
            "ignoreDependencies": [
                "ts-node"
            ]
        },
        "apps/notifier/node": {
            "ignoreDependencies": [
                "ts-node"
            ]
        },
        "apps/website/node": {
            "ignoreDependencies": [
                "ts-node"
            ]
        },
        "apps/website/ui": {
            "ignoreDependencies": [
                "@angular-devkit/build-angular",
                "@angular/compiler-cli",
                "jest-preset-angular"
            ]
        },
    }
}