{
  "name": "root",
  "private": true,
  "scripts": {
    "nx": "nx",
    "knip": "knip --config knip-config.ts",
    "lerna": "lerna",
    "lint": "lerna run lint",
    "lint:quiet": "lerna run lint -- --quiet",
    "build": "lerna run build",
    "build:changes": "lerna run build --since main",
    "build:tools": "lerna run build --scope=@wraithlight/tools*",
    "build:prod": "lerna run build:prod",
    "build:guid": "lerna run build --scope @wraithlight/core.guid",
    "postinstall": "yarn build:tools && yarn build:guid && yarn apply-patches && yarn build --scope=@wraithlight/common.logger.sdk",
    "graph": "nx graph",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "test:mono": "yarn jest -c=jest-mono.config.js --coverage",
    "validate-package-json": "node .tools/json-schema.mjs --files=package.json",
    "validate-swagger-json": "node .tools/json-schema.mjs --files=swagger.json",
    "validate-tsconfig-json": "node .tools/json-schema.mjs --files=tsconfig.json --ignoreFolders=apps/user-management/ui",
    "validate-tsconfig-build-json": "node .tools/json-schema.mjs --files=tsconfig.build.json --ignoreFolders=apps/user-management/ui",
    "guid": "node .tools/guidgen.mjs",
    "test-report:collect": "lerna la --json > .test-reports/data.json",
    "test-report:generate": "yarn mustache .test-reports/data.json .test-reports/template .test-reports/index.html",
    "test-report:open": "yarn open-cli .test-reports/index.html",
    "test-report": "yarn test:coverage && yarn test-report:collect && yarn test-report:generate && yarn test-report:open",
    "precommit": "yarn && yarn build && yarn lint && yarn knip && yarn test",
    "apply-patches": "ts-node .patches/index.ts",
    "readme-check": "node .tools/readme-check.mjs",
    "deplist": "node .tools/deplist.mjs",
    "validate-workspaces": "node .tools/workspace-validator.mjs --silent"
  },
  "workspaces": [
    "apps/**/*",
    "packages/*",
    "packages/realtime/*",
    "packages/auth/*",
    "packages/core/*",
    "packages/core/env/*",
    "packages/core/logger/*",
    "packages/core/mustache/*",
    "packages/core/memoize/*",
    "packages/core/decorator/*",
    "packages/core/scheduler/*",
    "packages/core/package-info/*",
    "packages/game/*",
    "packages/l10n/*",
    "packages/logs/*",
    "packages/notifier/*",
    "packages/environment-static/*",
    "packages/common/*",
    "packages/common/password/*",
    "packages/framework/*",
    "packages/framework/deepmerge/*",
    "packages/health-checker/*",
    "packages/facade/*",
    "packages/game-website/*",
    "packages/content/*",
    "packages/tools/*",
    "packages/api-token/*",
    "packages/user-management/*",
    "packages/request-id/*",
    "packages/latency/*",
    "packages/domain/*",
    "packages/communications/*",
    "poc/*"
  ],
  "engines" : { 
    "node" : ">=18.0.0 <19.0.0",
    "yarn": ">=1.22.0 <1.23.0"
  },
  "dependencies": {
    "@wraithlight/core.guid": "*",
    "@wraithlight/common.logger.sdk": "*"
  },
  "devDependencies": {
    "typescript": "5.0.4",
    "lerna": "7.1.0",
    "jsonschema": "1.4.1",
    "knip": "5.0.0",
    "open-cli": "7.2.0",
    "mustache": "4.2.0",
    "nx": "16.7.2",
    "@wraithlight/tools.eslint.base": "*",
    "@wraithlight/tools.jest.base": "*",
    "@wraithlight/tools.webpack.base": "*",
    "@wraithlight/tools.tsconfig.base": "*",
    "jest": "29.5.0",
    "@types/node": "20.11.28",
    "ts-node": "10.9.1"
  },
  "resolutions": {
    "**/node-gyp": "9.3.1",
    "**/@types/express": "4.17.17"
  }
}
