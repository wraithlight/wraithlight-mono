{
  "name": "root",
  "private": true,
  "scripts": {
    "nx": "nx",
    "knip": "knip --config knip-config.ts",
    "lerna": "lerna",
    "lint": "lerna run lint",
    "lint:quiet": "yarn eslint . --quiet",
    "build": "lerna run build",
    "build:changes": "lerna run build --since main",
    "build:tools": "lerna run build --scope=@wraithlight/tools*",
    "build:prod": "lerna run build:prod",
    "build:guid": "lerna run build --scope @wraithlight/core.guid",
    "postinstall": "yarn build:tools && yarn build:guid && yarn apply-patches && yarn build --scope=@wraithlight/common.logger.sdk",
    "graph": "nx graph",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "test:mono": "yarn jest -c=jest-mono.config.js --coverage",
    "validate-json": "node .tools/json-schema.mjs",
    "guid": "node .tools/guidgen.mjs",
    "test-report:collect": "lerna la --json > .test-reports/data.json",
    "test-report:generate": "yarn mustache .test-reports/data.json .test-reports/template .test-reports/index.html",
    "test-report:open": "yarn open-cli .test-reports/index.html",
    "test-report": "yarn test:coverage && yarn test-report:collect && yarn test-report:generate && yarn test-report:open",
    "precommit": "yarn && yarn build && yarn lint && yarn knip && yarn test",
    "apply-patches": "ts-node .patches/index.ts",
    "deplist": "node deplist.mjs",
    "readme-check": "node readme-check.mjs"
  },
  "workspaces": [
    "apps/**/*",
    "packages/*",
    "packages/realtime/*",
    "packages/auth/*",
    "packages/core/*",
    "packages/core/env/*",
    "packages/core/logger/*",
    "packages/core/mustache/*",
    "packages/core/memoize/*",
    "packages/core/decorator/*",
    "packages/core/scheduler/*",
    "packages/core/package-info/*",
    "packages/game/*",
    "packages/l10n/*",
    "packages/logs/*",
    "packages/notifier/*",
    "packages/environment-static/*",
    "packages/common/*",
    "packages/common/password/*",
    "packages/framework/*",
    "packages/framework/deepmerge/*",
    "packages/health-checker/*",
    "packages/facade/*",
    "packages/game-website/*",
    "packages/content/*",
    "packages/tools/*",
    "packages/api-token/*",
    "packages/request-id/*",
    "packages/latency/*",
    "packages/domain/*",
    "poc/*"
  ],
  "engines" : { 
    "node" : ">=18.0.0 <19.0.0",
    "yarn": ">=1.22.0 <1.23.0"
  },
  "dependencies": {
    "@wraithlight/core.guid": "*",
    "@wraithlight/common.logger.sdk": "*"
  },
  "devDependencies": {
    "typescript": "5.0.4",
    "lerna": "6.5.1",
    "eslint": "8.40.0",
    "jsonschema": "1.4.1",
    "knip": "2.19.10",
    "open-cli": "7.2.0",
    "mustache": "4.2.0",
    "nx": "16.7.2",
    "@wraithlight/tools.eslint.base": "*",
    "@wraithlight/tools.jest.base": "*",
    "@wraithlight/tools.webpack.base": "*",
    "jest": "29.5.0",
    "@regru/eslint-plugin-prefer-early-return": "1.0.0",
    "@typescript-eslint/eslint-plugin": "5.59.2",
    "@typescript-eslint/parser": "5.59.2",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-deprecation": "1.4.1",
    "eslint-plugin-import": "2.27.5",
    "@types/node": "20.11.28",
    "ts-node": "10.9.1"
  }
}
