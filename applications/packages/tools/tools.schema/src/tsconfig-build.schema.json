{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "TSCONFIG BUILD JSON SCHEMA",
  "description": "Schema for package tsconfig.build.json files in the repository.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "enum": [
        ""
      ]
    },
    "compilerOptions": {
      "type": "object",
      "properties": {
        "outDir": {
          "type": "string",
          "enum": ["dist/esm"]
        }
      },
      "additionalProperties": false,
      "required": [
        "outDir"
      ]
    },
    "include": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["src"]
      }
    },
    "exclude": {
      "type": "array",
      "items": {
        "type":" string",
        "enum": ["**/*.spec.ts"]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "$schema",
    "compilerOptions",
    "include",
    "exclude"
  ]
}
