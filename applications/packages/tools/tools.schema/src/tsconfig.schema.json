{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "TSCONFIG JSON SCHEMA",
  "description": "Schema for package tsconfig.json files in the repository.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "enum": [
        "../../../node_modules/@wraithlight/tools.schema/dist/tsconfig.schema.json",
        "../../../../node_modules/@wraithlight/tools.schema/dist/tsconfig.schema.json"
      ]
    },
    "compileOnSave": {
      "type": "boolean",
      "enum": [
        false
      ]
    },
    "compilerOptions": {
      "type": "object",
      "properties": {
        "strict": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "noImplicitOverride": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "noPropertyAccessFromIndexSignature": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "noImplicitReturns": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "noFallthroughCasesInSwitch": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "sourceMap": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "downlevelIteration": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "importHelpers": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "useDefineForClassFields": {
          "type": "boolean",
          "enum": [
            false
          ]
        },
        "target": {
          "type": "string",
          "enum": [
            "ESNext",
            "ES2022"
          ]
        },
        "module": {
          "type": "string",
          "enum": [
            "ESNext",
            "ES2022"
          ]
        },
        "moduleResolution": {
          "type": "string",
          "enum": [
            "Bundler",
            "node"
          ]
        },
        "esModuleInterop": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "experimentalDecorators": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "lib": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "ES2022",
              "ES2015",
              "DOM"
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "angularCompilerOptions": {
      "type": "object",
      "properties": {
        "enableI18nLegacyMessageIdFormat": {
          "type": "boolean",
          "enum": [
            false
          ]
        },
        "strictInjectionParameters": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "strictInputAccessModifiers": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "strictTemplates": {
          "type": "boolean",
          "enum": [
            true
          ]
        }
      }
    },
    "include": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "src",
          "__mocks__"
        ]
      }
    },
    "extends": {
      "type": "string",
      "enum": [
        "../../../tsconfig.package.json",
        "../../../../tsconfig.package.json",
        "../../../tsconfig.application.json",
        "../../../node_modules/@wraithlight/tools.tsconfig.base/dist/tsconfig.package.json",
        "../../../../node_modules/@wraithlight/tools.tsconfig.base/dist/tsconfig.package.json",
        "../../../node_modules/@wraithlight/tools.tsconfig.base/dist/tsconfig.application.json"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "$schema",
    "include"
  ]
}