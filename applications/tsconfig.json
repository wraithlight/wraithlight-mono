{
  "compilerOptions": {
    "lib": [
      "ES2015"
    ],
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "paths": {
      "@wraithlight/*": [
        "packages/realtime/*/src/index.ts",
        "packages/*/src/index.ts",
        "packages/auth/*/src/index.ts",
        "packages/core/*/src/index.ts",
        "packages/core/env/*/src/index.ts",
        "packages/core/logger/*/src/index.ts",
        "packages/core/mustache/*/src/index.ts",
        "packages/core/scheduler/*/src/index.ts",
        "packages/core/package-info/*/src/index.ts",
        "packages/core/memoize/*/src/index.ts",
        "packages/core/decorator/*/src/index.ts",
        "packages/game/*/src/index.ts",
        "packages/logs/*/src/index.ts",
        "packages/notifier/*/src/index.ts",
        "packages/environment-static/*/src/index.ts",
        "packages/framework/*/src/index.ts",
        "packages/framework/deepmerge/*/src/index.ts",
        "packages/facade/*/src/index.ts",
        "packages/health-checker/*/src/index.ts",
        "packages/game-website/*/src/index.ts",
        "packages/common/*/src/index.ts",
        "packages/common/password/*/src/index.ts",
        "packages/content/*/src/index.ts",
        "packages/api-token/*/src/index.ts",
        "packages/user-management/*/src/index.ts",
        "packages/request-id/*/src/index.ts",
        "packages/latency/*/src/index.ts",
        "packages/domain/*/src/index.ts"
      ]
    }
  },
  "exclude": [
    "knip-config.ts"
  ]
}
